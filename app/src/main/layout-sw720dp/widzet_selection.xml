<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg"
    tools:context="com.literacyall.app.Dialog.ImageSelectionDialog">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/hundred_fifty"
        android:weightSum="8"
        android:orientation="horizontal">


        <View
            android:layout_width="@dimen/zero"
            android:layout_height="fill_parent"
            android:layout_weight=".5" />


        <ImageButton
            android:id="@+id/ibtnDragAndDrop"
            android:layout_width="@dimen/zero"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_info_drag_drop" />


        <View
            android:layout_width="@dimen/twenty"
            android:layout_height="fill_parent"
            android:layout_weight=".5" />


        <ImageButton
            android:id="@+id/ibtnGeneral"
            android:layout_width="@dimen/zero"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_info_link" />


        <View
            android:layout_width="@dimen/twenty"
            android:layout_height="fill_parent"
            android:layout_weight=".5" />


        <ImageButton
            android:id="@+id/ibtnAssistiveTuch"
            android:layout_width="@dimen/zero"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_info_showed_by" />

        <View
            android:layout_width="@dimen/twenty"
            android:layout_height="fill_parent"
            android:layout_weight=".5" />




    </LinearLayout>


</RelativeLayout>
