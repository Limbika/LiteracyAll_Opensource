<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/four_hundred"
    android:layout_height="@dimen/three_hundred"
    android:background="@drawable/dialog_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_margin="@dimen/twenty"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="0.05"/>

        <EditText
            android:id="@+id/edtTaskPackName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:background="@drawable/dialog_edt_bg"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_weight=".2"
            android:textSize="@dimen/twenty"
            android:layout_gravity="center"
            android:hint="@string/TaskPackName" />



        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="0.05"/>


        <EditText
            android:id="@+id/edtTaskPackLebel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:background="@drawable/dialog_edt_bg"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_weight=".2"
            android:maxLength="1"
            android:inputType="number"
            android:textSize="@dimen/twenty"
            android:layout_gravity="center"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="0.05"/>


        <EditText
            android:id="@+id/TaskPackId"
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:background="@drawable/dialog_edt_bg"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_weight=".2"
            android:maxLength="2"
            android:inputType="number"
            android:textSize="@dimen/twenty"
            android:layout_gravity="center"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="0.05"/>


        <Button
            android:id="@+id/btnDone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_margin="@dimen/twenty"
            android:layout_gravity="center"
            android:layout_weight=".2"
            android:textSize="@dimen/twenty"
            android:textColor="@color/black"
            android:background="@android:color/transparent"
            android:text="@string/done" />



    </LinearLayout>
</LinearLayout>