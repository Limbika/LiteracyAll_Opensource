<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/five_hundred"
    android:layout_height="@dimen/hundred_fifty"
    android:orientation="vertical"
    android:background="@drawable/dialog_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:backgroundTint="@color/transparent"
        android:orientation="vertical">

            <TextView
                android:id="@+id/tvSoundPath"
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:gravity="center"
                android:layout_weight=".7"
                android:inputType="textMultiLine"
                android:text="ABC"
                android:textColor="@color/black"
                android:textSize="@dimen/font_fifteen" />

            <Button
                android:id="@+id/btnSoundPathOk"
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight=".3"
                android:layout_marginRight="@dimen/thirty"
                android:layout_marginBottom="@dimen/ten"
                android:gravity="right"
                android:background="@android:color/transparent"
                android:text="@string/ok"
                android:textColor="@color/black"
                android:textSize="@dimen/font_twenty_five" />

    </LinearLayout>


</LinearLayout>
