<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context="com.literacyall.app.activities.TaskActivity">

    <GridView
        android:id="@+id/gvTask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnWidth="120dp"
        android:gravity="center"
        android:listSelector="#00000000"
        android:numColumns="5"
        android:paddingBottom="@dimen/eighteen"
        android:paddingLeft="@dimen/thirty_five"
        android:paddingRight="@dimen/eighteen"
        android:paddingTop="@dimen/thirty_five"
        android:stretchMode="columnWidth"
        android:verticalSpacing="@dimen/eighteen" />

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="@dimen/thirty"
            android:layout_marginRight="@dimen/twenty_five"
            android:src="@drawable/ic_plus" />

    </android.support.design.widget.CoordinatorLayout>

</RelativeLayout>
