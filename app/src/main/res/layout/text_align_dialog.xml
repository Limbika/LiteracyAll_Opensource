<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/editor_background">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/hundred_fifty"
        android:orientation="horizontal"
        android:weightSum="6">


        <View
            android:layout_width="@dimen/zero"
            android:layout_height="fill_parent"
            android:layout_weight=".5" />


        <ImageButton
            android:id="@+id/ibtnCircularText"
            android:layout_width="@dimen/zero"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_align_top" />


        <View
            android:layout_width="@dimen/twenty"
            android:layout_height="fill_parent"
            android:layout_weight="1" />


        <ImageButton
            android:id="@+id/ibtnSquareText"
            android:layout_width="@dimen/zero"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_new_text" />

        <View
            android:layout_width="@dimen/twenty"
            android:layout_height="fill_parent"
            android:layout_weight=".5" />


    </LinearLayout>


</RelativeLayout>
