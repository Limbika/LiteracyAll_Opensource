<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <SurfaceView
        android:id="@+id/surface_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_04"
        android:background="@color/translucent_white"
        android:gravity="center"
        android:visibility="visible"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="@dimen/dp_09"
            android:layout_height="@dimen/dp_09"
            android:layout_marginLeft="@dimen/dp_04"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_cross" />

        <ToggleButton
            android:id="@+id/mediaplayer_playpause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_03"
            android:background="@drawable/ic_play_pause"
            android:textOff=""
            android:textOn="" />

        <SeekBar
            android:id="@+id/progress_bar"
            style="@style/videoProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_03"
            android:layout_marginRight="@dimen/dp_04"
            android:clickable="false"
            android:indeterminateDrawable="@null"
            android:progressDrawable="@drawable/progress_video" />
    </LinearLayout>

</RelativeLayout>
