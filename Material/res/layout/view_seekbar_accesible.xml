<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="horizontal"
	android:gravity="center">
	<ImageButton 
        android:id="@+id/less"
        android:src="@drawable/ic_less_accesible_seekbar"
        android:layout_width="@dimen/dp_07"
        android:layout_height="@dimen/dp_07" />
	<SeekBar
    	android:id="@+id/bar"
        android:progressDrawable="@drawable/progress_styled"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center" />
	<ImageButton 
    	android:id="@+id/more"
    	android:src="@drawable/ic_more_accesible_seekbar"
        android:layout_width="@dimen/dp_07"
        android:layout_height="@dimen/dp_07" />
</LinearLayout>